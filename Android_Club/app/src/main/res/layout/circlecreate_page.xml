<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="동아리 개설"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/createCircleImage"
            android:layout_width="150dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/image_border" />

        <TextView
            android:id="@+id/createCircleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/createCircleImage"
            android:layout_toEndOf="@+id/createCircleImage"
            android:layout_toRightOf="@+id/createCircleImage"
            android:text="동아리이름"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createCircleName"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/createCircleImage"
            android:background="@drawable/round"
            android:hint="동아리 이름"
            android:padding="4dp"
            android:textColor="#000000"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/createCirclePhotoButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/createCircleImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_photo_black_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_photo_black_24dp"
            android:padding="5dp"
            android:text="프로필 사진 등록 "
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/createCircleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="#DDDDDDDD"
            android:text="동아리 개설"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/introCircleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createCircleButton"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="동아리 소개"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/introCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/introCircleText"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round"
            android:hint="동아리 소개"
            android:padding="4dp"
            android:textColor="#000000"
            android:textColorHint="#ffffff" />


    </RelativeLayout>

</LinearLayout>